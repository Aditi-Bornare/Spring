<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="beans.Employee" table="tbl_emp" schema="system">
		<!-- For Primary key used id tag -->
		<id name="id" />
		
		<!-- For Non-Primary key use property tag -->
		<property name="name" />
		<property name="email" />
	</class>
</hibernate-mapping>